<div class="container">
    <div class="row"> <!-- Main header row -->
        <div class="col-xs-12 text-center" id="top-bar">
            <h1> EAT DA BURGER!</h1>
        </div>
    </div>   
    <div class="row"> <!--data display row -->
        <div class="col-xs-6 text-center task"><!--Burgers to devour-->
            <div class="row"> 
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-xs-9 text-center task">
                    <pre>
                        {{this.id}}.{{this.burger_name}}
                    </pre>
                </div> 
            <div class="col-xs-3 text-center">
                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">
                    DEVOUR IT!
                    </button>
                </form>
              </div>
              {{/unless}}
              {{/each}}
            </div>
        </div>
    </div>    
</div>

 

